<h2>Add a new account</h2>
<h3>Enter a username and password to get started</h3>
<%= form_tag('/users/create', method: :post) %>
<%= text_field_tag :name, nil, placeholder: "user name" %>
<%= password_field_tag :password, nil, placeholder: "password" %>
<%= password_field_tag :confirm_password, nil, placeholder: "confirm password" %>
<%= submit_tag "Submit" %>


<div class="container">
	<div class="beersshow__beerdata">
		<p>Beer Name: <%= @beer.name %></p>
		<p> Beer Description: <%= @beer.description %></p>
		<p>Beer ABV.: <%= @beer.abv %></p>
		<p>Brewery: <%= @beer.brewery_name %></p>
		<img src="<%= @beer.image_url %>">
	</div>
	<BR><BR>

	<div class="comments">
		<h4>Comments:</h4>
		<p>Leave a comment:</p>
			<%= form_tag("/comments", method: "post") do %>
				<%= text_area_tag(:content) %>
				<%= hidden_field_tag(:beer_id, @beer.id) %>
				<%= submit_tag("Leave Comment") %>
			<% end %>
		<% @comments.each do |comment| %>
			<div class="comment">
				<div class="commentauthor"><%= comment.user.name %>:</div>
				<div class="beersshow__commentcontent"><%= comment.content %></div>
			</div>
			</br>
		<% end %>
	</div>
	</br>
</div>